{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build BSP",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/bsp"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build FSBL",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/fsbl"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build APP",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/app"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Start OpenOCD",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "${workspaceFolder}/openocd/arty-z7.cfg"
            ],
            "options": {
                "cwd": "${workspaceFolder}/openocd"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Open On-Chip Debugger",
                    "endsPattern": "Info : Listening on port 3333 for gdb connections"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}