{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug APP",
            "type": "cortex-debug",
            "request": "launch",
            "cwd": "${workspaceFolder}/openocd",
            "executable": "${workspaceFolder}/app/app.elf",
            "servertype": "openocd",
            "configFiles": [
                "${workspaceFolder}/openocd/arty-z7.cfg"
            ],
            "searchDir": [
                "${workspaceFolder}/openocd"
            ],
            "runToEntryPoint": "_boot",
            "showDevDebugOutput": "raw",
            "overrideLaunchCommands": [
                "monitor arty_z7_reset",
                "load",
            ],
            "preLaunchTask": "Build APP",
        },
        {
            "name": "Debug FSBL",
            "type": "cortex-debug",
            "request": "launch",
            "cwd": "${workspaceFolder}/openocd",
            "executable": "${workspaceFolder}/fsbl/fsbl.elf",
            "servertype": "openocd",
            "configFiles": [
                "${workspaceFolder}/openocd/arty-z7.cfg"
            ],
            "searchDir": [
                "${workspaceFolder}/openocd"
            ],
            "runToEntryPoint": "_start",
            "showDevDebugOutput": "raw",
            "overrideLaunchCommands": [
                "monitor reset halt",
                "load"
            ],
            "preLaunchTask": "Build FSBL"
        },
        {
            "name": "Debug Flasher",
            "type": "cortex-debug",
            "request": "launch",
            "cwd": "${workspaceFolder}/openocd",
            "executable": "${workspaceFolder}/flasher/flasher.elf",
            "servertype": "openocd",
            "configFiles": [
                "${workspaceFolder}/openocd/arty-z7.cfg"
            ],
            "searchDir": [
                "${workspaceFolder}/openocd"
            ],
            "runToEntryPoint": "_start",
            "showDevDebugOutput": "raw",
            "overrideLaunchCommands": [
                "monitor arty_z7_reset",
                "load",
            ],
            "preLaunchTask": "Build Flasher"
        },
    ]
}